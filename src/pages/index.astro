---
// Full Astro Component Syntax:
// https://docs.astro.build/basics/astro-components/
import FeedingForm from '../components/FeedingForm.svelte'
import FeedingList from '../components/FeedingList.svelte'
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <style>
      html,
      body {
        font-family: system-ui;
        margin: 0;
      }
      body {
        padding: 2rem;
      }
    </style>
  </head>
  <body>
    <header><h1>Baby Feeding Tracker</h1> <div>settings</div></header>
    <main>
      <FeedingForm client:load />
      <FeedingList client:load />
    </main>
  </body>
</html>

<style>
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  h1 {
    text-align: center;
  }
</style>
